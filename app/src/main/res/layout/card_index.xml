<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Qatar Exchange"
            android:id="@+id/indexName"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="48dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:text="9125"
                    android:id="@+id/indexValue"
                    android:textStyle="bold"
                    android:textColor="#9E9E9E"
                    android:textSize="22sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:text="14 (0.34%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/indexChange"
                    android:paddingBottom="16dp"
                    android:textSize="12sp"

                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_up_bold"/>
                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/minus"/>
                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_down"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:text="13\n2\n28"
                    android:textAlignment="textEnd"
                    android:lineSpacingExtra="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:id="@+id/indexCompaniesUpAndDown"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>