<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nasserapps.apitester"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".Controllers.Services.InformAI"
            android:process=":remote">
        </receiver>
        <receiver
            android:name=".Controllers.Services.InformAIAfterBooting"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".Controllers.Services.ExecutedTask"
            android:exported="false"/>

        <activity
            android:name=".Controllers.Activities.EditStockListActivity"
            android:label="@string/title_activity_edit_stock_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Controllers.InProgress.InvestmentListActivity"
            android:label="@string/title_activity_edit_investment_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Controllers.InProgress.RulesActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Controllers.Activities.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".Controllers.Activities.HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity
            android:name=".Controllers.Activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.Activities.ChecklistActivity"
            android:label="@string/title_activity_checklist"
            android:parentActivityName=".Controllers.Activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nasserapps.apitester.Controllers.Activities.HomeActivity"/>
        </activity>
        <activity
            android:name=".Controllers.Activities.StockDetailsActivity"
            android:label="@string/title_activity_stock_details"
            android:parentActivityName=".Controllers.Activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nasserapps.apitester.Controllers.Activities.HomeActivity"/>
        </activity>
        <activity
            android:name=".Controllers.Activities.StocksCompareActivity"
            android:label="@string/title_activity_stocks_compare"
            android:parentActivityName=".Controllers.Activities.StockDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nasserapps.apitester.Controllers.Activities.StockDetailsActivity"/>
        </activity>
    </application>

</manifest>
